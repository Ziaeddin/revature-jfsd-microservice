# ===========================================
# E-Shop Microservices Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git - it contains sensitive data!

# Database Configuration
MYSQL_ROOT_PASSWORD=change-this-to-secure-password
MYSQL_DATABASE=eshop_db

# Database Connection (for microservices)
DB_USERNAME=root
DB_PASSWORD=change-this-to-secure-password

# SonarQube Database
SONAR_JDBC_USERNAME=sonar
SONAR_JDBC_PASSWORD=change-this-to-secure-password
POSTGRES_PASSWORD=change-this-to-secure-password

# Service URLs
SERVICE_REGISTRY_URL=http://service-registry:8761/eureka/
CONFIG_SERVER_URL=http://config-server:8888

# Spring Profile
SPRING_PROFILES_ACTIVE=docker
